<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme.Todo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnSurface">@color/surfaceTextColor</item>
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorAccent">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="editTextStyle">@style/Widget.Todo.EditText</item>
    </style>


    <style name="Theme.Todo" parent="Base.Theme.Todo" />
    <style name="Theme.Todo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Todo.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar"/>

    <style name="Theme.Todo.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/lobster_two_italic</item>
        <item name="android:fontFamily">@font/lobster_two_italic</item>
        <item name="android:color">?attr/colorOnPrimary</item>
    </style>

<style name="Widget.Todo.EditText" parent="Widget.AppCompat.EditText">
    <item name="android:background">@null</item>
</style>
</resources>
